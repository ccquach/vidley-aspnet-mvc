@model Vidly.ViewModels.CustomerListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Customers.Count == 0)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table>
        <tr>
            <th>Customer</th>
        </tr>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
            </tr>
        }
    </table>
}
